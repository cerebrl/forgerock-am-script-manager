{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "es5",
  },
  "exclude": ["tests", "**/*.test.ts", "**/*.test.d.ts"]
}
